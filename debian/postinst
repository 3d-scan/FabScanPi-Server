#!/bin/bash
# postinst script for fabscanpi-server
#
# see: dh_installdeb(1)



set -e

LOG_DIR=/var/log/fabscanpi
SCANS_DIR=/var/scans
WWW_DIR=/var/www

if [ -d $WWW_DIR ];then
    chown -R pi:pi $WWW_DIR
fi

if [ ! -d $LOG_DIR ];then
    mkdir -p $LOG_DIR
    chown -R pi:pi $LOG_DIR
fi

if [ ! -d $SCANS_DIR ];then
    mkdir -p $SCANS_DIR
    chown -R pi:pi $SCANS_DIR
fi

/etc/init.d/fabscanpi-server start

exit 0